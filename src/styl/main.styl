@import url('http://fonts.googleapis.com/css?family=Laila:700')

adora-font = 'Laila', serif
adora-green = #53ffdb
adora-pink = #F08894

wrapper = 26em
sidebar = 16em


body
  font-family adora-font
  font-size 24px
  background adora-green
  color adora-pink
  text-align center
  text-transform uppercase
  font-weight 700
  line-height 1.3
  text-shadow 2px 2px rgba(0, 0, 0, 0.24)

    


body::-webkit-scrollbar 
  width 13px

 
body::-webkit-scrollbar-track 
  background-color adora-green


body::-webkit-scrollbar-thumb 
  background-color #f08894

img 
    max-width 100%


* > a 
  text-decoration none

  
ul 
  padding 0
  list-style-type none

form, input 
  font-family adora-font
  font-size 1em


.nav 
  font-size 0.8em

  a
    color adora-green 

.nav li 
  margin 0 0 1em 0 

  
.sidebar
  max-width sidebar
  height 100vh
  position fixed
  left 0
  top 0
  padding 1em 2em 0 1em
  background adora-pink
  color adora-green
  margin 0

  a
    color white
  


.container
  margin-left 10em
  padding 0 1em
