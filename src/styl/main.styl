@import url('http://fonts.googleapis.com/css?family=Laila:700')

adora-font = 'Laila', serif
adora-green = #53ffdb
adora-pink = #F08894

wrapper = 26em
home-width = 32em

html
  height 100%

body
  font-family adora-font
  font-size 24px
  background adora-green
  color adora-pink
  font-weight 700
  line-height 1.3
  text-shadow 1px 1px rgba(0, 0, 0, 0.4)
  padding 0
  margin 0
  text-align center

body::-webkit-scrollbar 
  width 13px

body::-webkit-scrollbar-track 
  background-color adora-pink

body::-webkit-scrollbar-thumb 
  background-color adora-green

img 
    max-width 100%

* > a 
  text-decoration none

ul 
  padding 0
  list-style-type none

form, input 
  font-family adora-font
  font-size 1em

nav
  text-align center
  font-size 0.8em

  a
    color adora-green 

nav li 
  margin 0 0 2em 0 

  

.home
.page
  max-width home-width
  margin 0 auto

.tagline
  margin 4em 0
  font-size 1.1em
    
.about
  margin 4em 0
  padding 2em
  color adora-green
  background adora-pink
    

.sidebar
  background adora-green
  color adora-pink
  padding 2em 0

  a
    color adora-pink
  

  
  
.video-container 
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 100% 

.video-container iframe
.video-container object
.video-container embed
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  border 0

.logo
  text-align center
  margin 1em 0

footer
  background adora-pink
  color adora-green
  margin 2em 0 0 0
  padding 1em 0
  
  i
    margin 0 0.2em
    padding 1em

  a
    color adora-green