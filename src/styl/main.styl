@import url('http://fonts.googleapis.com/css?family=Laila:700')
@import url('https://fonts.googleapis.com/css?family=Supermercado+One')
@import url('https://fonts.googleapis.com/css?family=Montez')



adora-font = 'Supermercado One', cursive
adora-font = 'Montez', cursive
adora-font = 'Laila', serif
adora-green = #53ffdb
adora-pink = #F08894
adora-font-size = 24px

wrapper = 26em
home-width = 32em

html
  height 100%

body
  font-family adora-font
  font-size adora-font-size
  background adora-green
  color black
  font-weight 700
  line-height 1.3
  padding 0
  margin 0
  text-align center

  a
    color blue
    

body::-webkit-scrollbar 
  width 13px

body::-webkit-scrollbar-track 
  background-color adora-pink

body::-webkit-scrollbar-thumb 
  background-color adora-green

img 
    max-width 100%

* > a 
  text-decoration none

ul 
  padding 0
  list-style-type none

form, input 
  font-family adora-font
  font-size 1em

nav
  text-align center
  font-size 0.8em

  a
    color black

nav li 
  margin 0 0 1.3em 0 

  

.home
.page
.container
  max-width home-width
  margin 0 auto

.give
  color black
  
.tagline
  width 100%
  margin 2em 0
  font-size 1.1em
    
.about
  margin 1em 0
  padding 2em
  color black
  background adora-pink
    

.sidebar
  background adora-green
  color black
  padding 1em 0

  a
    color black
  

  
  
.video-container 
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 100%
  margin auto 

.video-container iframe
.video-container object
.video-container embed
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  border 0

.logo
  text-align center
  margin 1em 0

footer
  background adora-pink
  color black
  margin 2em 0 0 0
  padding 1em 0
  font-size 0.8em
  
  i
    margin 0 0.2em
    padding 1em

  a
    color black

.music-logo
  max-width 200px
  margin 2em 0

.posts
  margin 4em 0

  li
    margin 0 0 2em 0

.lyrics
  margin 2em 0